<div class="form-group">
  <label class="col-sm-3 col-md-2 control-label">
    <span data-toggle="tooltip" title="{{ help_method_get_cell_row }}">{{ entry_method_get_cell_row }}</span>
  </label>
  <div class="col-sm-9 col-md-10" style="padding: 0px;">
    {% import "default/template/macros/field_method_parameter.twig" as fmpar %}
    {{ fmpar.show(method_params_prefix_hierarchy, method_params_name_hierarchy, 'row', method_params, method_data, true) }}
  </div>
</div>

<div class="form-group">
  <label class="col-sm-3 col-md-2 control-label">
    <span data-toggle="tooltip" title="{{ help_method_get_cell_col }}">{{ entry_method_get_cell_col }}</span>
  </label>
  <div class="col-sm-9 col-md-10" style="padding: 0px;">
    <select class="form-control" name="action{{ method_params_name_hierarchy }}[col][value]">
      {% for col in columns %}
        <option value="{{ col.id }}" {% if method_params['col']['value'] == col.id %} selected="selected" {% endif %}>{{ col.name }}</option>
      {% endfor %}
    </select>
  </div>
</div>
