<hr>
<div class="container-fluid form-horizontal">
    <div class="form-group">
        <label class="col-sm-2">{{ method_data.info["text_method_param_source"] }}</label>
        <div class="col-sm-10" style="padding: 0px;"> 
            {% import "default/template/macros/field_method_parameter.twig" as fmpar %}
            {{ fmpar.show(method_params_prefix_hierarchy, method_params_name_hierarchy, 'source', method_params, method_data) }}   
        </div>
    </div>    
    <div class="form-group">
            <div class="checkbox" style="margin-left: 15px;">
                <label class="checkbox-inline">
                    <input type="checkbox" value="1" name="action{{ method_params_name_hierarchy }}[save][value]" id="{{ method_params_prefix_hierarchy }}_separator_checkbox-save"{% if method_params['save']['value']  == 1 %} checked="checked"{% endif %}> {{ method_data.info.text_method_save }} 
                </label>
            </div>
    </div>    
</div> 