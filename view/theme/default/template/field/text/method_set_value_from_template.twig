<div class="form-group" id="block-text_template">
  <label class="col-sm-2 control-label" for="input-text_template">{{ text_template }}</label>
  <div class="col-sm-10">
    <textarea name="action{{ method_params_name_hierarchy }}[template][value]" id="input-text_template" data-toggle="summernote" data-lang="{{ code }}" class="form-control">
      {{ method_params['template']['value'] }}
    </textarea>
  </div>
</div>

<script type="text/javascript">
  init_summernote_s($('#input-text_template'), '{{ doctype_uid }}', {hideConditions: true});
  $('#block-text_template').on({
    "shown.bs.dropdown": function () {
      $('.input-select_field').focus(); // фокус на поле автокомплита редактора
    }
  });
</script>
