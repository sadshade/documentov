<ul class="nav nav-tabs">
  <li class="active">
    <a data-toggle="tab" href="#{{ MODULE_NAME }}-tab_general">{{ tab_general }}</a>
  </li>
  <li id="{{ MODULE_NAME }}-tab_editor_image">
    <a data-toggle="tab" href="#{{ MODULE_NAME }}-tab_image">{{ tab_image }}</a>
  </li>
</ul>
<div class="tab-content">
  <div class="tab-pane fade in active" id="{{ MODULE_NAME }}-tab_general">
    <div class="form-group">
      <label class="col-sm-4 control-label" for="{{ MODULE_NAME }}-select_editor_enabled">
        <span data-toggle="tooltip" title="{{ help_editor_enabled }}">{{ entry_editor_enabled }}</span>
      </label>
      <div class="col-sm-8">
            <select name="field[editor_enabled]" id="{{ MODULE_NAME }}-select_editor_enabled" class="form-control">
              <option value="true"{% if params.editor_enabled %} selected{% endif %}>{{ text_enabled }}</option>
              <option value="false"{% if not params.editor_enabled %} selected{% endif %}>{{ text_disabled }}</option>
            </select>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="{{ MODULE_NAME }}-tab_image">
    <div class="form-group">
      <label class="col-sm-3 control-label" for="input-doctype_name">
        <span data-toggle="tooltip" title="{{ help_max_image_width }}">{{ entry_max_image_width }}</span>
      </label>
      <div class="col-sm-9">
        <input type="number" value="{{ params.image_width }}" min="0" name="field[image_width]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label" for="input-doctype_name">
        <span data-toggle="tooltip" title="{{ help_max_image_height }}">{{ entry_max_image_height }}</span>
      </label>
      <div class="col-sm-9">
        <input type="number" value="{{ params.image_height }}" min="0" name="field[image_height]" class="form-control">
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label" for="input-size_file">
        <span data-toggle="tooltip" title="{{ help_size_file }}">{{ entry_size_file }}</span>
      </label>
      <div class="col-sm-9">
        <input type="number" min="0" name="field[size_file]" id="{{ MODULE_NAME }}-input-limit" value="{{ params.size_file }}" class="form-control">
      </div>
    </div>

  </div>
</div>
