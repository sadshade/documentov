<div>
{% if usage %}
  <table class="table table-bordered table-hover">      
    {% for usage_name, usages in usage %}
      <tr>
        <td colspan="2" class="background2">
          {{ attribute(_context,'text_usage_' ~ usage_name) }}
        </td>
      </tr>
      {% for row in usages %}
      <tr>
        <td>{{ row.module }}</td>
        <td>{{ row.value }}</td>
      <tr>  
      {% endfor %}
    {% endfor %}
  </table>
{% else %}
  {{ text_no_usage }}
{% endif %}
</div>